.edit-view{
    box-sizing: border-box;
}

.options{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    padding: 0 30rpx;
}
.options .cancel{
    font-size: 26rpx;
    color: #333;
    font-weight: 500;
  }
.options .button{
    width: 150rpx;
    height: 64rpx;
    background: #F17991;
    border-radius: 10rpx;
    padding: 0 20rpx;
    font-size: 26rpx;
    color: white;
    box-sizing: border-box;
    line-height: 64rpx;
    text-align: center;
}
.title{
    display: block;
    width: 100%;
    margin-top: 40rpx;
    font-size: 30rpx;
    color: #000;
    overflow: hidden;    
 	text-overflow: ellipsis;     
 	white-space: nowrap;
    border-top: 1rpx solid #959595;
    border-bottom: 1rpx solid #959595;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 20rpx;
    box-sizing: border-box;
}
.note {
    display: block;
    width: 100%;
    font-size: 28rpx;
    color: #666;
    line-height: 45rpx;
    text-align: right;
    padding-right: 20rpx;
    box-sizing: border-box;
}
.content  {
    margin: 0 auto;
    width: 90%;
    box-sizing: border-box;
    padding: 20rpx;
    border: 2rpx solid #aaa;
    border-radius: 25rpx;
}
.content text {
    display: block;
    width: 100%;
    color: #666;
    box-sizing: border-box;
    padding: 20rpx;
    font-size: 30rpx;
}
.addContent{
    font-size: 24rpx;
    color: #666;
    padding: 30rpx 40rpx;
    box-sizing: border-box;
  }
.photo-group{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 100rpx;
}
.add-photo{
    width: 200rpx;
    height: 200rpx;
    background: #f7f7f7;
    margin-top: 100rpx;
    margin-left: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
image.photo{
    width: 200rpx;
    height: 200rpx;
}


.columns{
    border-top: 1rpx solid #959595;
    border-bottom: 1rpx solid #959595;
    padding: 0 20rpx;
    box-sizing: border-box;
    height: 120rpx;
    line-height: 120rpx;
    margin-top: 30rpx;
  }
  .column-item0,
  .column-item1,
  .column-item2,
  .column-item3,
  .column-item4
  {
    font-size: 22rpx;
    color: white;
    background-color: #C9C9C9;
    border-radius: 25rpx;
    padding: 14rpx 27rpx;
    box-sizing: border-box;
    margin-right: 18rpx;
  }
  .column-item0.active{
    background-color: #AD86F9 !important;
  }
  .column-item1.active{
    background-color: #E2184D !important;
  }
  .column-item2.active{
    background-color: #EC3C8D !important;
  }
  .column-item3.active{
    background-color: #F9A825 !important;
  }
  .column-item4.active{
    background-color: #A1ACE5 !important;
  }