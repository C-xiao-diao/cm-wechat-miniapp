.edit-view{
    box-sizing: border-box;
}

.options{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    padding: 0 30rpx;
}
.options .cancel{
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
}
.options .button{
    background: #49c266;
    border-radius: 10rpx;
    color: white;
    width: 100rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
}
.title{
    display: block;
    width: 100%;
    border-top: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
    padding: 20rpx;
    box-sizing: border-box;
}
.note {
    display: block;
    width: 100%;
    font-size: 28rpx;
    color: #666;
    line-height: 45rpx;
    text-align: right;
    padding-right: 20rpx;
    box-sizing: border-box;
}
.content  {
    margin: 0 auto;
    width: 90%;
    box-sizing: border-box;
    padding: 20rpx;
    border: 2rpx solid #aaa;
    border-radius: 25rpx;
}
.content text {
    display: block;
    width: 100%;
    color: #666;
    box-sizing: border-box;
    padding: 20rpx;
    font-size: 30rpx;
}
.addContent{
    width: 100%;
    padding: 30rpx;
    box-sizing: border-box;
}
.photo-group{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
}
.add-photo{
    width: 200rpx;
    height: 200rpx;
    background: #f7f7f7;
    margin-top: 100rpx;
    margin-left: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
image.photo{
    width: 200rpx;
    height: 200rpx;
}