.follow-view{
  padding: 0 30rpx;
  box-sizing: border-box;
}

.options{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.options .cancel{
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
.options .button{
  background: #49c266;
  border-radius: 10rpx;
  color: white;
  width: 100rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
}
input{
  margin-top: 40rpx;
  margin-left: 40rpx;
}
.add-photo{
  width: 200rpx;
  height: 200rpx;
  background: #f7f7f7;
  margin-top: 100rpx;
  margin-left: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
image.photo{
  width: 200rpx;
  height: 200rpx;
}