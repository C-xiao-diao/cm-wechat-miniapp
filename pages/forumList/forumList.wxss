@import "./forumList.skeleton.wxss";
page{
  background: #f2f2f2;
}
.title{
  font-weight: 500;
}
.list{
  margin-top: 68rpx;
}
.list-item{
  margin-top: 35rpx;
  width: 100%;
  padding-left: 50rpx;
  padding-right: 50rpx;
  padding-bottom: 35rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}
.top{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.userinfo-left{
  display: flex;
  align-items: center;
}
.userinfo{
  margin-left: 20rpx;
}
.username{
  font-size: 30rpx;
}
.userinfo-bottom{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}
.userinfo-bottom text{
  font-size: 24rpx;
  color: #666;
  margin-left: 5rpx;
}

.gender{
  width: 32rpx;
  height: 32rpx;
}
.like-group{
  padding: 10rpx 16rpx;
  background-color: white;
  display: flex;
  align-items: center;
  border-radius: 26rpx;
}
.like{
  width: 32rpx;
  height: 30rpx;
}
.like-num{
  margin-left: 10rpx;
}
.like-num{
  color: #666;
  font-size: 24rpx;
}

.middle{
  margin-top: 35rpx;
}
.middle text{
  font-size: 24rpx;
  color: #333;
  line-height: 42rpx;
}
.bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}

.bottom image{
  width: 200rpx;
  height: 175rpx;
}
.follow{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 80rpx;
  position: fixed;
  bottom: 0rpx;
  padding: 50rpx;
  background-color: #f2f2f2;
}

.follow text{
  background: white;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 10rpx 24rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
  box-shadow: 0 0 8rpx rgba(0,0,0,0.3);
}