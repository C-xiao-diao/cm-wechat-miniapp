
page{
  background: #f2f2f2;
}
.title{
  width: 100%;
  font-weight: 500;
  text-align: left;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 30rpx 50rpx 0;
  box-sizing: border-box
}
.theme-content{
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.theme-content>text:first-child{
  display: -webkit-inline-box;
  text-overflow: ellipsis;
  word-break: break-all;
  overflow: hidden;
  line-clamp: 3;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
}
.theme-content-text-item{
  display: flex;
  color: #333;
  line-height: 42rpx;
  border-bottom: 1rpx dashed#333;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.showAllDetail{
  color: blue !important;
  width: 100%;
  display: flex;
}
.theme-content-images{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}
.theme-content-images>image{
  width: 200rpx;
  height: 175rpx;
  margin-bottom: 20rpx;
}
.theme-content-options{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.theme-content-options>image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx;
}
.theme-content text{
  font-size: 24rpx;
  color: #333;
  line-height: 42rpx;
}
.list{
  margin-top: 68rpx;
  width: 100%;
}
.list-item{
  margin-top: 35rpx;
  width: 100%;
  padding-left: 50rpx;
  padding-right: 50rpx;
  padding-bottom: 35rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}
.top{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.userinfo-left{
  display: flex;
  align-items: center;
}
.userinfo{
  margin-left: 20rpx;
}
.username{
  font-size: 30rpx;
}
.userinfo-bottom{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}
.userinfo-bottom text{
  font-size: 24rpx;
  color: #666;
  margin-left: 5rpx;
}

.gender{
  width: 32rpx;
  height: 32rpx;
}
.like-group{
  padding: 10rpx 16rpx;
  background-color: white;
  display: flex;
  align-items: center;
  border-radius: 26rpx;
}
.like{
  width: 32rpx;
  height: 30rpx;
}
.like-num{
  margin-left: 10rpx;
}
.like-num{
  color: #666;
  font-size: 24rpx;
}
.like-num-active{
  color: #d81e06;
}

.middle{
  margin-top: 35rpx;
}
.middle text{
  display: flex;
  font-size: 24rpx;
  color: #333;
  line-height: 42rpx;
  border-bottom: 1rpx dashed#333;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.bottom{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}

.bottom image{
  margin-bottom: 30rpx;
  width: 200rpx;
  height: 175rpx;
}

.releaseTime{
  color: #aaa;
  font-size: 24rpx;
}

/* 输入弹框 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.ensemble-group{
  width:100%;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 30rpx 0;
  box-sizing: border-box;
  align-items: center;
}
.ensemble-picker{
  border: 1rpx solid #ccc;
  border-radius: 100rpx;
  height: 75rpx;
  width: 400rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.ensemble-button{
  font-weight: 500;
  background-color: red;
  color: white;
  border-radius: 100rpx;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
}
.picker{
  background-color: white;
  display: flex;
  flex-direction: column;
  width: 400rpx;
  position: absolute;
  bottom: 120rpx;
  left: 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.3);
}
.picker > text{
  padding: 10rpx 0;
  box-sizing: border-box;
  text-align: center;
}

/* 回到顶部样式 */

.toTop {
  position: fixed;
  bottom: 5%;
  right: 10rpx;
}

.toTop image {
  width: 80rpx;
  height: 80rpx;
}



/* 回到顶部样式END */