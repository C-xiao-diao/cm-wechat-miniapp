page{
  background: #f2f2f2;
}
.hotlist-view{
  padding: 0 50rpx;
  box-sizing: border-box;
}
.top{
  display: flex;
  justify-content: space-between;
}
.tabs{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.tab{
  font-size: 34rpx;
  color: #666;
  padding: 30rpx 15rpx;
  box-sizing: border-box;
}
.tabs>text.active{
  color: #000;
  border-bottom: 2rpx solid #000;
}
.top-right{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.top-right>image{
  width: 50rpx;
  height: 50rpx;
}
.top-right>text{
  margin-left: 12rpx;
}
/* 热榜内容 */
.hotlist-content{
  margin-top: 35rpx;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  box-shadow: 0 0 13rpx rgba(0,0,0,0.3);
  border-radius: 10rpx;
}

.hotlist-item{
  display: flex;
  flex-direction: row;
  /* margin-bottom: 48rpx; */
}
.hotlist-item text{
  font-size: 28rpx;
  line-height: 78rpx;
}

.hotlist-item-sortnum{
  color: #666;
}
.sortnum0{
  color: #eb444d;
}
.sortnum1{
  color: #ee6f2d;
}
.sortnum2{
  color: #eeb14c;
}
.hotlist-item > text.hotlist-item-title{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow:hidden;
}

.rising-tone{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 80rpx;
}

.rising-tone text{
  background: white;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 10rpx 24rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
  box-shadow: 0 0 8rpx rgba(0,0,0,0.3);
}