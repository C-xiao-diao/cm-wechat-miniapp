.hotlist-view {
  /* padding: 0 50rpx; */
  box-sizing: border-box;
  width: 750rpx;
  overflow: hidden;
}

.userInfo {
  padding: 30rpx 30rpx 50rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 0px 0px 20rpx 0rpx rgba(0, 0, 0, 0.18);
  border-radius: 0px 0px 40rpx 40rpx;
}

.userInfo-group {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.userInfo-group-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userInfo-group-left .school {
  font-size: 34rpx;
  font-weight: 500;
  /* max-width: 200rpx; */
}

.userInfo-group-left .funnel {
  width: 28rpx;
  height: 28rpx;
  margin: 0 10rpx;
}

.userInfo-group-left .city {
  font-size: 18rpx;
  color: #666;
}

.userInfo-group-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* margin-top: 30rpx; */
  /* justify-content: space-between; */
}

.userInfo-group-right .userInfo-detail {
  margin-left: 30rpx;
}

.userInfo-group-right .avatar {
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid #000;
  border-radius: 50%;
}

.userInfo-group-right .gender {
  width: 32rpx;
  height: 30rpx;
}

.name-tags {
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
}

.name-tags>text{
  display: flex;
}

.name-tags text:first-child {
  font-size: 24rpx;
  margin-left: 10rpx;
}

.name-tags text:last-child {
  font-size: 16rpx;
  color: #D61616;
  background: rgba(214, 22, 22, 0.2);
  border-radius: 10rpx;
  padding: 2rpx 10rpx;
  box-sizing: border-box;
  margin-left: 20rpx;
}

.gender-school {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.gender-school .my-school {
  font-size: 16rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  color: #666;
}

.userInfo-detail>.userInfo-hot {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 10rpx;
}

.userInfo-detail>.userInfo-hot>.note_active {
  width: 30rpx;
  height: 30rpx;
}

.userInfo-hot {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.num-group {
  display: flex;
  align-items: center;
}

.note_active {
  width: 28rpx;
  height: 28rpx;
}

.hot-num {
  font-size: 18rpx;
  margin-left: 14rpx;
}

/* 未登录/未授权 */
.userStatus {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.userStatus text {
  font-size: 24rpx;
}

.userStatus text:first-child {
  margin-left: 20rpx;
}

.userStatus text:last-child {
  margin-left: 20rpx;
  color: blue;
  border-bottom: 1rpx solid blue;
}

.content {
  padding: 0 30rpx;
}

.top {
  display: flex;
  justify-content: space-between;
}

.tabs {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: flex-start; */
  justify-content: space-between;
  margin-top: 30rpx;
}

.tab {
  width: 33%;
  font-size: 26rpx;
  color: #999;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  /* border-bottom: 5rpx solid #f2f2f2; */
  text-align: center;
  border-radius: 28rpx;
}

.tabs>text.active {
  color: #000;
  color: white;
}

.tabs>text.active-01 {
  background-color: #F19D8E;
}

.tabs>text.active-02 {
  background-color: #4998F7;
}

.tabs>text.active-03 {
  background-color: #77B7CB;
}

/* 热榜内容 */
.hotlist-content {
  margin-top: 35rpx;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2);
  border-radius: 25rpx;
  background: white;
  margin-bottom: 260rpx;
}

.hotlist-content-item {
  border-bottom: 1rpx solid #d2d2d2;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.hotlist-content-item:last-child {
  border-bottom: 0;
}

.hotlist-item {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.hotlist-item text {
  font-size: 24rpx;
  line-height: 78rpx;
}

.hotlist-item-sortnum {
  color: #666;
  line-height: 32rpx;
}

.sortnum0,
.sortnum1,
.sortnum2,
.sortpeople0,
.sortpeople1,
.sortpeople2 {
  color: #FF000E;
}

.hotlist-item>text.hotlist-item-title {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: #000;
  line-height: 32rpx;
}

.new-image {
  width: 62rpx;
  height: 26rpx;
}

.fire-image {
  width: 26rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

/* 风云人物 */
.famous-people-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.famous-people {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.famous-people-num {
  font-size: 36rpx;
}

.famous-people .famous-people-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin: 0 30rpx;
}

.name-tags .famous-people-gender {
  width: 22rpx;
  height: 22rpx;
}

.name-tags text {
  font-size: 20rpx;
}

.attention-group {
  border: 1rpx solid #666;
  width: 97rpx;
  height: 44rpx;
  border-radius: 22rpx;
  text-align: center;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.attention-group>text {
  font-size: 18rpx;
  color: #666;
}

.guanzhu{
  background-color: #E00842;
  border: 1rpx solid #E00842;
}
.guanzhu text {
  color: #fff;
}
.yiguanzhu{
  color:#666666;
  border: 1rpx solid #666666;
}
.huxiangguanzhu {
  color:#666666;
  border: 1rpx solid #666666;
}
.huifen {
  background-color: #E00842;
}
.huifen text{
  color: #E00842;
}


