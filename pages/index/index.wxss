.impromptu-view3 {
  width: 690rpx;
  height: 700rpx;
  padding: 50rpx;
  box-sizing: border-box;
  margin-left: 375rpx;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0 0 13rpx rgba(0, 0, 0, 0.3);
}

.impromptu-view3-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.impromptu-view3-top-question {
  width: 20rpx;
  height: 25rpx;
}

.impromptu-view3-top-text {
  font-size: 20rpx;
  color: #666;
  margin-left: 9rpx;
}

.impromptu-view3-comma-up {
  width: 109rpx;
  height: 105rpx;
  margin-top: 69rpx;
}

.impromptu-view3-content-view {
  display: flex;
  flex-direction: column;
}

.impromptu-view3-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #000;
  line-height: 84rpx;
  display: -webkit-inline-box;
  text-overflow: ellipsis;
  word-break: break-all;
  overflow: hidden;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}

.impromptu-view3-content {
  font-size: 18rpx;
  color: #666;
  line-height: 31rpx;
  display: -webkit-inline-box;
  text-overflow: ellipsis;
  word-break: break-all;
  overflow: hidden;
  line-clamp: 3;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
}

.impromptu-view3-comma-two {
  display: flex;
  justify-content: flex-end;
  margin-top: 14rpx;
}

.impromptu-view3-comma-down {
  width: 109rpx;
  height: 105rpx;
  transform: rotate(180deg);
  text-align: right;
}

.impromptu-view3-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 46rpx;
}

.impromptu-view3-bottom-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.impromptu-view3-bottom>text {
  font-size: 24rpx;
  margin-left: 25rpx;
}
/* 操作选项组合 */
.impromptu-options{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 46rpx 88rpx;
  box-sizing: border-box;
  margin-bottom: 200rpx;
}
.impromptu-options> view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.impromptu-photo1{
  width: 50rpx;
  height: 47rpx;
}
.impromptu-photo2{
  width: 47rpx;
  height: 47rpx;
}
.impromptu-photo3{
  width: 47rpx;
  height: 48rpx;
}
.impromptu-txt {
  font-size: 20rpx;
  color: #333;
  margin-top: 10rpx;
}
/* 切换学校弹框 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.school-group {
  background: white;
  width: 90%;
  padding: 50rpx;
  box-sizing: border-box;
}

.input-school-group {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-school-group input {
  padding: 20rpx 0rpx;
  /* box-sizing: border-box; */
  width: 100%;
  margin-top: 20rpx;
}

.button-school-group {
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}

.address-input,
.school-input {
  border: 1rpx solid #ccc;
}

.address-input {
  width: 100%;
  /* width: 150rpx; */
  /* margin-right: 30rpx; */
}

.picker {
  padding: 20rpx 30rpx;
  /* box-sizing: border-box; */
  width: 100%;
}

/* 学校列表弹框 */
.schoolList {
  display: flex;
  flex-direction: column;
  width: 82%;
  height: 400rpx;
  /* max-height: 400rpx; */
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  overflow-x: hidden;
  z-index: 10;
  position: absolute;
  top: 0rpx;
  border-radius: 10rpx;
  background-color: white;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}

.schoolList>text {
  line-height: 50rpx;
  font-size: 36rpx;
}

/* 底部的栏目 */
.columns {
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: white;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(0, 0, 0, 0.18);
}

.column-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.column-item>text {
  height: 10rpx;
  width: 10rpx;
  border-radius: 50%;
}

.column-item image {
  width: 115rpx;
  height: 150rpx;
  margin-top: 5rpx;
}

.column-item-00>text {
  background-color: #AE86F9;
}

.column-item-01>text {
  background-color: #E3194E;
}

.column-item-02>text {
  background-color: #EC3D8D;
}

.column-item-03>text {
  background-color: #F9A825;
}

.column-item-04>text {
  background-color: #A1ACE5;
}