.impromptu-view3 {
  /* width: 100%; */
  width: 650rpx;
  height: 1000rpx;
  padding: 50rpx;
  margin-top: -20rpx;
  margin-left: 0rpx;
  z-index: 999999;
  box-sizing: border-box;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0 0 13rpx rgba(0, 0, 0, 0.3);
}
.impromptu-view3-top {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.impromptu-view3-top-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 35rpx;
}
.impromptu-view3-title{
  margin-top: 35rpx;
}
.impromptu-view3-title text{
  font-weight: 500;
}
.impromptu-view3-content-view{
  /* display: inline-flexbox; */
  flex-direction: column;
}
.impromptu-view3-content {
  min-height: 70rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 42rpx;
  display: -webkit-inline-box;
  text-overflow: ellipsis;
  word-break: break-all;
  overflow: hidden;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.see-details{
  font-size: 24rpx;
  color: blue;
  display: flex;
  
}
.impromptu-view3-images {
  min-height: 420rpx;
  /* display: flex; */
  /* flex-direction: row;
  justify-content: space-between;
  align-items: flex-start; */
  margin-top: 30rpx;
  flex-wrap: wrap;
}
.impromptu-view3-photo {
  width: 160rpx;
  height: 115rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}
.impromptu-view3-options{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}
.impromptu-view3-options > view:first-child{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.impromptu-view3-options > view:nth-child(2){
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.impromptu-view3-options > view:last-child{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.impromptu-view3-options > view > image{
  width: 50rpx;
  height: 50rpx;
}

/* 切换学校弹框 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.school-group{
  background: white;
  width: 90%;
  padding: 50rpx;
  box-sizing: border-box;
}
.input-school-group{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.input-school-group input{
  padding: 20rpx 0rpx;
  /* box-sizing: border-box; */
  width: 100%;
  margin-top: 20rpx;
}
.button-school-group{
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}
.address-input,.school-input{
  border: 1rpx solid #ccc;
}
.address-input{
  width: 100%;
  /* width: 150rpx; */
  /* margin-right: 30rpx; */
}
.picker{
  padding: 20rpx 30rpx;
  /* box-sizing: border-box; */
  width: 100%;
}
/* 学校列表弹框 */
.schoolList{
  display: flex;
  flex-direction: column;
  width:82%;
  height: 400rpx;
  /* max-height: 400rpx; */
  box-shadow: 0 0 10px rgba(0,0,0,0.2);
  overflow-x: hidden;
  z-index: 10;
  position: absolute;
  top: 0rpx;
  border-radius: 10rpx;
  background-color: white;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}
.schoolList>text{
  line-height: 50rpx;
  font-size: 36rpx;
}