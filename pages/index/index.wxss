/* @import "./index.skeleton.wxss"; */
page {
  background: #f2f2f2;
}
.hotlist-view {
  /* padding: 0 50rpx; */
  box-sizing: border-box;
}
.userInfo{
  padding: 50rpx 50rpx;
  background: #fff;
}
.userInfo-group{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.userInfo-group-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.userInfo-group-left .school{
  font-size: 34rpx;
  font-weight: 500;
}
.userInfo-group-left .funnel{
  width: 28rpx;
  height: 28rpx;
  margin: 0 5rpx;
}
.userInfo-group-left .city{
  font-size: 18rpx;
}
.userInfo-group-right{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.userInfo-group-right .userInfo-detail{
  margin-left: 30rpx;
}
.userInfo-group-right .avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.userInfo-group-right .like{
  width: 32rpx;
  height: 30rpx;
}
.userInfo-group-right .name-tags text:first-child{
  font-size: 24rpx;
}
.userInfo-group-right .name-tags text:last-child{
  font-size: 22rpx;
  color: #fff;
  background: red;
  border-radius: 10rpx;
  padding: 2rpx 10rpx;
  box-sizing: border-box;
  margin-left: 20rpx;
}
.userInfo-group-right .gender-school{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}
.userInfo-group-right .gender-school .my-school{
  font-size: 24rpx;
  margin-left: 10rpx;
}

.userInfo-hot{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.note_active{
  width: 35rpx;
  height: 35rpx;
}
.hot-num{
  font-size: 28rpx;
  margin-left:20rpx;
}

.content{
  padding: 0 50rpx;
}
.top {
  display: flex;
  justify-content: space-between;
}

.tabs {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.tab {
  font-size: 34rpx;
  color: #666;
  padding: 30rpx 15rpx;
  box-sizing: border-box;
}

.tabs>text.active {
  color: #000;
  border-bottom: 5rpx solid #000;
}

.top-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.top-right>image {
  width: 50rpx;
  height: 50rpx;
}

.top-right>text {
  margin-left: 12rpx;
}

/* 热榜内容 */
.hotlist-content {
  margin-top: 35rpx;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  box-shadow: 0 0 13rpx rgba(0, 0, 0, 0.3);
  border-radius: 10rpx;
}
.hotlist-content-item{
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}
.hotlist-item {
  display: flex;
  flex-direction: row;
}

.hotlist-item text {
  font-size: 28rpx;
  line-height: 78rpx;
}

.hotlist-item-sortnum {
  color: #666;
}

.sortnum0 {
  color: #eb444d;
}

.sortnum1 {
  color: #ee6f2d;
}

.sortnum2 {
  color: #eeb14c;
}

.hotlist-item>text.hotlist-item-title {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.add-view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 50rpx;
}
.add{
  width: 100rpx;
  height: 100rpx;
}

.rising-tone {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 80rpx 0;
}

.rising-tone text {
  background: white;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 10rpx 24rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.3);
}

/* 输入弹框 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.input-group {
  padding: 20rpx;
  width: 630rpx;
  height: 350rpx;
  background: white;
}

.input-group text {
  font-size: 24rpx;
  color: #333;
  font-weight: 700;
}
.input-group textarea{
  border: 1rpx solid #999;
  height: 180rpx;
  margin-top: 30rpx;
}
.button-group{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.group{
  width: 30%;
  margin-top: 30rpx;
}