<view class="container">
    <view class="header">
        <view class="avatar-erea">
            <image class="avatar" bindtap="previewImage" src="{{userInfo.headimgUrl}}"></image>
            <image class="camera" mode="aspecFill" src="/imgs/icons/camera.png" bindtap="headimage"></image>
        </view>
        <view class="nickname">
            <text>{{userInfo.nickName}}</text>
            <!-- <image class="edit-nickname" bind:tap="editNickname" src="/imgs/icons/pen.png"></image> -->
        </view>
        <view class="membership">
            <view class="point" bind:tap="toInvite">
                <text>我的音符</text>
                <image src="/imgs/icons/note_active.png"></image>
                <text>{{userInfo.noteNumber}}</text>
            </view>
            <text class="my-tag">吃货达人</text>
        </view>
    </view>

    <view class="swiper-tab">
        <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">起个调吧</view>
        <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">跟调</view>
    </view>

    <!-- 起个调 -->
    <view class="swiper-box" wx:if="{{currentTab==0}}" bind:tap="closeList">
        <text class="no-data" wx:if="{{myThemeList.length == 0}}">{{noteMsg}}</text>
        <view class="article-area" wx:for="{{myThemeList}}" wx:key="id" for-index="{{index}}">
            <view class="article-title">
                <text>{{item.theme}}</text>
                <more-button bind:refresh="refreshMyTheme" prop-count="{{item.pointPraiseNumber}}" article-id="{{item.id}}" article-type="theme" id="{{'moreBtn'+index}}"></more-button>
            </view>
            <text class="article-content">{{item.supplementaryContent}}</text>
            <view class="article-images">
                <image src="{{obj}}" wx:key="index" wx:for-item="obj" wx:for="{{item.picture}}"></image>
            </view>
            <view class="article-hot">
                <view>
                    <image src="/imgs/icons/note_active.png"></image>
                    <text>{{item.pointPraiseNumber}}</text>
                </view>
            </view>
        </view>
    </view>

    <!-- 跟调 -->
    <view class="swiper-box" wx:if="{{currentTab==1}}">
        <text class="no-data" wx:if="{{myFollowList.length == 0}}">{{noteMsg}}</text>
        <view class="article-area" wx:for="{{myFollowList}}" wx:key="id" for-index="{{index}}">
            <view class="article-title">
                <text>{{item.theme.theme}}</text>
                <more-button bind:refresh="refreshMyFollow" prop-count="{{item.pointPraiseNumber}}" article-id="{{item.id}}" article-type="essay" id="{{'moreBtn'+index}}"></more-button>
            </view>
            <text class="article-content">{{item.content}}</text>
            <view class="article-images">
                <image src="{{obj}}" wx:key="index" wx:for-item="obj" wx:for="{{item.picture}}"></image>
            </view>
            <view class="article-hot">
                <view>
                    <image src="/imgs/icons/note_active.png"></image>
                    <text>{{item.pointPraiseNumber}}</text>
                </view>
            </view>
        </view>
    </view>

    <!-- 编辑昵称对话框 -->
    <view class="editModal" wx:if="{{showEditModal}}">
        <view class="wrap">
            <text class="title">修改昵称 <text class="span">(只能修改一次)</text></text>
            <view class="content">
                <input type="text" focus="{{true}}" value="{{nickname}}" bindinput="getNewNickname" />
            </view>
            <view class="btns">
                <text class="cancel" bind:tap="editCancel">取消</text>
                <text class="confirm" bind:tap="editConfirm">确认</text>
            </view>
        </view>
    </view>
    <!-- 编辑昵称对话框END -->

    <view class="toTop" hidden="{{!floorstatus}}" bindtap="goTop">
        <image class="" src="/imgs/icons/top.png"></image>
    </view>
</view>