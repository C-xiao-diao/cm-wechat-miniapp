.hisAttention-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 35rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #DCDCDC;
}
.userInfo{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.avatar{
  width:80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.attention-group{
  border: 1rpx solid #666;
  width: 97rpx;
  height: 44rpx;
  border-radius: 22rpx;
  text-align: center;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.attention-group>text {
  font-size: 18rpx;
  color: #666;
}
.attention-active>text {
  color: white;
}