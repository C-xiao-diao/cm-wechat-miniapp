<view class="container">
  <image class="top-image" src="/imgs/icons/register1.png"></image>
  <view class="wrap">
    <view  class="registerOne-top" bindtap="_chooseImage">
      <image class="registerOne-avatar" src="{{ headimgUrl ? headimgUrl : '/imgs/icons/no_avatar.png'}}" alt=""></image>
      <image class="registerOne-camera" src="/imgs/icons/camera.png" alt=""></image>
    </view>
    <view class="input-name">
      <text class="">用户名</text>
      <input class="nickname" value="{{nickname}}" type="text" placeholder="请输入昵称" bindinput="bindinput" />
    </view>
    <button class="registerOneSubmit" type="primary" bindtap="navToNextStep">下一步</button>
    <text class="description">
      昵称无法修改
      请慎重考虑后再提交
    </text>
  </view>
  
</view>