
.top-image {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 522rpx;
}

.wrap {
  width: calc(100% - 80rpx);
  margin: 0 auto;
  background: #80B5F9;
  border-radius: 25rpx;
  box-sizing: border-box;
  box-shadow: 0 0 20rpx rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  margin-top: -100rpx;
  padding: 35rpx;
}


.registerOne-top{
  position: relative;
}
.registerOne-avatar{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
}
.registerOne-camera{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  z-index: 99;
}

.input-name {
  width: calc(100% - 110rpx);
  margin: 0 auto;
  background: #fff;
  border-radius: 25rpx;
  box-sizing: border-box;
  padding: 20rpx;
}

.input-name text {
  display: block;
  width: 100%;
  text-align: left;
  box-sizing: border-box;
  padding-left: 20rpx;
  color: #000;
  font-size: 34rpx;
}

.nickname{
  width: 100%!important;
  text-align: center;
  border-bottom: 1rpx solid #898989;
  height: 100rpx;
  width:80%;
  color: #666;
  font-size: 28rpx;
  border-radius: 6rpx;
}
.registerOneSubmit{
  width: 400rpx!important;
  height: 90rpx!important;
  line-height: 50rpx!important;
  background: #fff!important;
  color:#80B5F9!important;
  border-radius: 50rpx!important;
  font-size: 32rpx!important;
  margin-top: 100rpx;
}
.description{
  color: #fff;
  line-height: 40rpx;
  font-size: 20rpx;
  text-align: center;
}