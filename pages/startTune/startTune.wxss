}
.movable-photo-item{
  position: relative !important;
}
image.photo{
  width: 200rpx;
  height: 200rpx;
}
.icon-box-img{
  position: absolute !important;
  right: 0;
  top: 0;
}
.tips{
  position: absolute;
  left: 10%;
  bottom: 50rpx;
  font-size: 22rpx;
  color:#666;
  text-align: center;
  display: flex;
  justify-content: center;
}