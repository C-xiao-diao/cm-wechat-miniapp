.follow-view{
  box-sizing: border-box;
}

.options{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.options .cancel{
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
.options .button{
  background: #49c266;
  border-radius: 10rpx;
  color: white;
  /* width: 100rpx; */
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
}
 .title{
  width: 100%;
  margin-top: 40rpx;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  height: 100rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.addContent{
  padding-left: 20rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
}
.columns{
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 120rpx;
  line-height: 120rpx;
}
.column-item{
  font-size: 22rpx;
  color: white;
  background-color: #C9C9C9;
  border-radius: 25rpx;
  padding: 14rpx 27rpx;
  box-sizing: border-box;
  margin-right: 18rpx;
}
.columns>text.active{
  background-color: #AD86F9 !important;
}
