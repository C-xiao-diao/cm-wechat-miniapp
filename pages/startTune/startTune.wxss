.follow-view{
  box-sizing: border-box;
}

.options{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.options .cancel{
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
.options .button{
  background: #49c266;
  border-radius: 10rpx;
  color: white;
  /* width: 100rpx; */
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
}
input, .title{
  width: 100%;
  margin-top: 40rpx;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  height: 100rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.addContent{
  padding-left: 30rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
}
.photo-group{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.add-photo{
  width: 200rpx;
  height: 200rpx;
  background: #f7f7f7;
  margin-top: 100rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
image.photo{
  width: 200rpx;
  height: 200rpx;
}
.tips{
  position: absolute;
  left: 10%;
  bottom: 50rpx;
  font-size: 22rpx;
  color:#666;
  text-align: center;
  display: flex;
  justify-content: center;
}